{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-md p-6 mx-auto mt-8 bg-white rounded-lg shadow-md">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="relative px-4 py-3 mb-4 text-red-700 bg-red-100 border border-red-400 rounded" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="mb-6 text-2xl font-bold text-center text-violet-900">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {
            attr: {
                class: 'space-y-4'
            }
        }) }}

        {{ form_row(registrationForm.username, {
            attr: {
                class: 'w-full px-3 py-2 border border-violet-300 rounded-md focus:outline-none focus:ring-2 focus:ring-violet-600 focus:border-transparent'
            },
            label_attr: {
                class: 'block text-sm font-medium text-gray-700 mb-1'
            }
        }) }}

        {{ form_row(registrationForm.email, {
            attr: {
                class: 'w-full px-3 py-2 border border-violet-300 rounded-md focus:outline-none focus:ring-2 focus:ring-violet-600 focus:border-transparent'
            },
            label_attr: {
                class: 'block text-sm font-medium text-gray-700 mb-1'
            }
        }) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr: {
                class: 'w-full px-3 py-2 border border-violet-300 rounded-md focus:outline-none focus:ring-2 focus:ring-violet-600 focus:border-transparent'
            },
            label_attr: {
                class: 'block text-sm font-medium text-gray-700 mb-1'
            }
        }) }}

        {{ form_row(registrationForm.agreeTerms, {
            label_attr: {
                class: 'ml-2 text-sm text-gray-700'
            },
            row_attr: {
                class: 'flex items-center'
            }
        }) }}

        <button type="submit" class="w-full px-4 py-2 font-bold text-white rounded-md bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-violet-600 focus:ring-opacity-50">
            Register
        </button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}